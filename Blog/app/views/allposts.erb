<!-- Figura para los posts -->
<% if @posts %>
    <% unless @posts.empty? %>
        <h3>Posts:</h3>
        <%@posts.each do |post| %>
            <p>Title: <%= post.title %> <br>
            Body: <%= post.body %></p>
            <a href="/post/edit/<%= post.id %>">Editar</a>
            <a href="/post/delete/<%= post.id %>">Eliminar</a>
        <% end %>
    <% else %>
        <p>No hay ning√∫n post</p>
    <% end %>
<% end %>
