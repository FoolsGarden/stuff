<% if @post %>
  <div class='modal-header'>
    <button type='button' class='close' data-dismiss='modal'>
      &times;
    </button>
    <h4 class='modal-title'>
      Edit:
    </h4>
  </div>
  <div class='modal-body'>
    <form id='form_edit' method='post'> 
      <div class='form-group'>
        <input type="hidden" class='form-control' id = "id"name='id' cols = '100' rows = '1' value= "<%= @post.id %>">
        <label>
          Titulo:
        </label>
        <input id = 'post' class='form-control' name='title' cols = '100' rows = '1' value= "<%= @post.title %>">

      </div>
      <div class='form-group'>
        <label>
          Body:
        </label>
        <textarea id = 'post' class='form-control' name='post' cols = '100' rows = '4'><%= @post.body %>
        </textarea>
      </div>

      <input type='submit' id='confirm_edit_post_btn' class='btn btn-success' data-dismiss='modal'
      value="DONE">
    </form>
  </div>
<% else %>
  <div class='modal-header'>
    <button type='button' class='close' data-dismiss='modal'>
      &times;
    </button>
    <h4 class='modal-title'>
      Edit:
    </h4>
  </div>
  <div class='modal-body'>
    <form id='form_edit' action='/post/edit/confirm' method='post'> 
      <div class='form-group'>
        <label>
          Titulo:
        </label>
        <textarea id = 'post' class='form-control' name='title' cols = '100' rows = '1'>
        </textarea>
      </div>
      <div class='form-group'>
        <label>
          Body:
        </label>
        <textarea id = 'post' class='form-control' name='post' cols = '100' rows = '4'>
        </textarea>
      </div>

      <button type='submit' id='confirm_edit_post_btn' class='btn btn-success' data-dismiss='modal'>
        DONE
      </button>
    </form>
  </div>
<% end %>