<h3>Sign up to start having fun.</h3>
<form id="frm_sign">
  <div class="form-group">
    <label for="user_name">
      Name:
    </label>
    <input class="form-control" id="user_name" name="name" placeholder="Enter your name" required>
  </div>
  <div class="form-group">
    <label for="email">
      Email:
    </label>
    <input type="email" class="form-control" id="email" name="email"placeholder="Enter user name" required>
  </div>    
  <div class="form-group">
    <label for="pwd">
      Password:
    </label>
    <input type="password" class="form-control" id="pwd" name="pwd" placeholder="Enter password">
  </div>
  <div class="form-group">
    <button id="btn_reg" type="submit" class="btn btn-info">
      SIGN UP 
    </button>
    <button id="btn_back" class="btn btn-warning">
      BACK
    </button>
  </div>
</form>
